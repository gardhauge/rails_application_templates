<div class="row">
  <div class="small-4 columns">
    <h1>Login</h1>
  </div>
</div>
<% unless notice.nil? %>
  <div class="row">
    <div class="small-4 columns">
      <div data-alert class="alert-box info radius">
        <p><%= notice %>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="small-4 columns">
    <%= form_tag '/login' do %>
      <div class="field">
        <%= label_tag :email %><br>
        <%= text_field_tag :email %>
      </div>
      <div class="field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Sign in" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <p>Not registered?
      <%= link_to "Sign up", signup_path %>
      now!
  </div>
</div>
